    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug P06 Automata Simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/p06_ejecutable.cc",
            "args": [
                "${workspaceFolder}/src/input.fa",
                "${workspaceFolder}/src/input.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
